<style>
  /* Docs-specific styles */
  .docs-nav {
    display: flex;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-xl);
    flex-wrap: wrap;
  }

  .docs-nav__link {
    padding: var(--spacing-xs) var(--spacing-md);
    background: var(--color-background-secondary);
    border: 1px solid var(--color-border-default);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .docs-nav__link:hover {
    background: var(--color-background-tertiary);
    color: var(--color-text-primary);
    text-decoration: none;
  }

  .docs-nav__link--active {
    background: var(--color-accent-primary);
    color: var(--color-background-primary);
    border-color: var(--color-accent-primary);
  }

  .faq-section {
    margin-bottom: var(--spacing-xxl);
    scroll-margin-top: var(--spacing-xl);
  }

  .faq-section__title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-accent-primary);
    margin-bottom: var(--spacing-lg);
    padding-bottom: var(--spacing-sm);
    border-bottom: 1px solid var(--color-border-default);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .back-to-top {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-normal);
    color: var(--color-text-muted);
  }

  .back-to-top:hover {
    color: var(--color-accent-primary);
  }

  .docs-section {
    margin-bottom: var(--spacing-xl);
  }

  .docs-section__title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-md);
  }

  .docs-section__content {
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
  }

  .docs-section__content code {
    background: var(--color-background-tertiary);
    padding: 2px 6px;
    border-radius: var(--radius-sm);
    font-family: var(--font-family-mono);
    font-size: var(--font-size-sm);
  }

  .docs-section__content pre {
    background: var(--color-background-tertiary);
    padding: var(--spacing-md);
    border-radius: var(--radius-sm);
    overflow-x: auto;
    margin: var(--spacing-md) 0;
  }

  .docs-section__content pre code {
    background: none;
    padding: 0;
  }

  .docs-section__content ul,
  .docs-section__content ol {
    padding-left: var(--spacing-lg);
    margin: var(--spacing-sm) 0;
  }

  .docs-section__content li {
    margin-bottom: var(--spacing-xs);
  }

  .docs-section__content ul li {
    list-style: disc;
  }

  .docs-section__content ol li {
    list-style: decimal;
  }

  .docs-section__content p {
    margin-bottom: var(--spacing-sm);
  }

  .architecture-diagram {
    background: var(--color-background-tertiary);
    padding: var(--spacing-lg);
    border-radius: var(--radius-md);
    font-family: var(--font-family-mono);
    font-size: var(--font-size-sm);
    white-space: pre;
    overflow-x: auto;
    margin: var(--spacing-lg) 0;
  }
</style>

<!-- Navigation -->
<nav class="docs-nav" id="docs-nav">
  <!-- Generated from sections -->
</nav>

<!-- Content -->
<div id="docs-content">
  <p style="color: var(--color-text-muted);">Loading documentation...</p>
</div>

